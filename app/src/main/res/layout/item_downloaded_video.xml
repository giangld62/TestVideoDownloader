<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewVideoThumbImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <ImageView
            android:id="@+id/ivVideoThumbImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivPlayIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:src="@drawable/play_icon"
        app:layout_constraintBottom_toBottomOf="@id/cardViewVideoThumbImage"
        app:layout_constraintEnd_toEndOf="@id/cardViewVideoThumbImage"
        app:layout_constraintStart_toStartOf="@id/cardViewVideoThumbImage"
        app:layout_constraintTop_toTopOf="@id/cardViewVideoThumbImage" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivCheckIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="9dp"
        android:src="@drawable/tick_icon"
        app:layout_constraintBottom_toBottomOf="@id/cardViewVideoThumbImage"
        app:layout_constraintEnd_toEndOf="@id/cardViewVideoThumbImage" />


</androidx.constraintlayout.widget.ConstraintLayout>